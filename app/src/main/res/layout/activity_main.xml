<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cdlList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <com.google.android.material.appbar.AppBarLayout
            android:elevation="9dp"
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:titleEnabled="false"
                app:layout_collapseParallaxMultiplier="0.1"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.appcompat.widget.AppCompatImageView
                    app:layout_collapseParallaxMultiplier="0.1"
                    android:minHeight="450dp"
                    android:id="@+id/ivBanner"
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="matrix"
                    app:layout_scrollFlags="scroll"
                    android:src="@drawable/empty_banner_placeholder" />


                <androidx.appcompat.widget.Toolbar
                    app:layout_collapseMode="pin"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/rest_details_top"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/back_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/rest_details_back_background"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_gravity="start"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/white_icon_background"
                                    android:contentDescription="@string/back" />
                                <ImageView
                                    android:id="@+id/rest_details_back"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_gravity="start"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:padding="5dp"
                                    app:tint="@color/white"
                                    android:src="@drawable/back_arrow_black"
                                    android:contentDescription="@string/back" />
                            </RelativeLayout>

                            <TextView
                                android:visibility="gone"
                                android:textStyle="bold"
                                android:textAlignment="textStart"
                                android:textSize="16sp"
                                android:id="@+id/tvRestaurantNameToolbar"
                                android:padding="5dp"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@id/wishList_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/back_layout"
                                android:text="@string/hello_world"
                                android:ellipsize="end"
                                android:maxLines="1"/>

                            <RelativeLayout
                                android:layout_marginEnd="10dp"
                                android:id="@+id/wishList_layout"
                                android:layout_toStartOf="@+id/ivSearch_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/ivWishList_background"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/white_icon_background"
                                    android:contentDescription="@string/wish_list" />
                                <ImageView
                                    app:tint="@color/white"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/ivWishList"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_bookmark_border"
                                    android:contentDescription="@string/wish_list" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/ivSearch_layout"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/ivSearch_background"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/white_icon_background"
                                    android:contentDescription="@string/search" />
                                <ImageView
                                    android:layout_centerVertical="true"
                                    android:id="@+id/ivSearch"
                                    android:layout_width="35dp"
                                    android:padding="10dp"
                                    android:layout_height="35dp"
                                    android:layout_marginEnd="15dp"
                                    android:src="@drawable/search"
                                    app:tint="@color/white"
                                    android:contentDescription="@string/search" />
                            </RelativeLayout>


                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:visibility="gone"
                            android:background="@color/transparent"
                            android:id="@+id/category_list"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            android:layout_below="@+id/rest_details_top"
                            android:orientation="horizontal"/>
                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/content_view"
            android:layout_marginTop="-75dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="-24dp"
                    android:layout_marginRight="25dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="15dp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hello_world"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="8dp"
                    android:minHeight="750dp"
                    android:scrollbars=""
                    android:layout_marginBottom="-50dp"
                    app:cardCornerRadius="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>